.map {
	width 100%
	height 100%
}
.mapwrapper {
	position fixed
	left 0
	top 0
	height 100vh
	width calc(100% - 400px)
	float left
}

.map-overlay {
	font: 12px/20px 'Helvetica Neue', Arial, Helvetica, sans-serif;
	position absolute
	bottom 0
	z-index 10
	width 400px
	max-width 100%
	left calc(50% - 200px)
}

.map-overlay .map-overlay-inner {
	padding 10px
	background-color rgba(255, 255, 255, 0.75)
	box-shadow 0 1px 2px rgba(0, 0, 0, 0.20)
	border-radius 3px
	margin-bottom 20px
	> fieldset {
		border none
	}
}


.boxdraw {
	background: rgba(56,135,190,0.1);
	border: 2px solid #3887be;
	position: absolute;
	top: 0;
	left: 0;
	width: 0;
	height: 0;
}