.map {
	width 100%
	height 100%
}
.mapwrapper {
	position absolute
	left 0
	top 0
	height 100vh
	width 50%
	float left
}
.mapwrapper.sticky {
	position fixed
}
.mapwrapper.bottom {
	bottom 0
	top auto
}

.map-overlay {
	font: 12px/20px 'Helvetica Neue', Arial, Helvetica, sans-serif;
	position absolute
	bottom 0
	z-index 10
	width 400px
	max-width 100%
	left calc(50% - 200px)
}

.map-overlay .map-overlay-inner {
	padding 10px
	background-color rgba(255, 255, 255, 0.75)
	box-shadow 0 1px 2px rgba(0, 0, 0, 0.20)
	border-radius 3px
	margin-bottom 20px
	> fieldset {
		border none
	}
}