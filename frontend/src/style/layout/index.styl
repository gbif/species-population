@import "map"
@import "story"
@import "app"
html, body {
	margin 0
	padding 0px
	font-size 14px
	line-height 1.5
	font-family 'Open Sans', sans-serif
	background #fefefe
	color #444
	font-weight 100
}
* {
	box-sizing border-box
}

header {
	height $headerHeight
	background $mainColor
	color white
}
section.introduction {
	min-height "calc(100vh - %s)" % $headerHeight
	background $mainColor
	>div {
		margin auto
		max-width 600px
		padding 50px
	}
}


h1, h2, h3 {
	//text-align center
	font-size 20px
}
h2 {
	font-size 22px
}
.app .description {
	font-weight bold
}

section.description>div {
	width 800px
	max-width 90%
	margin auto
	padding 20px
}
