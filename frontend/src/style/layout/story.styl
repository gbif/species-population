section.story {
	group()
	background #02393d
	position relative
	color white
}

.map {
	width 100%
	height 100%
}
.mapwrapper {
	position absolute
	left 0
	top 0
	height 100vh
	width 50%
	float left
}
.mapwrapper.sticky {
	position fixed
}
.mapwrapper.bottom {
	bottom 0
	top auto
}
.storyline {
	margin-left 50%
	.chapter {
		padding 50px 10px
		min-height 100vh
		border-bottom 1px solid #205356
	}
}
